{
  "version": 2,
  "builds": [
    {
      "src": "api/**/*.js",
      "use": "@vercel/node"
    },
    {
      "src": "*.html",
      "use": "@vercel/static"
    },
    {
      "src": "css/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "js/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "admin/**/*",
      "use": "@vercel/static"
    },
    {
      "src": "images/**/*",
      "use": "@vercel/static"
    }
  ],
  "routes": [
    { "src": "/api/gallery/(.+)", "dest": "/api/gallery/[id].js?id=$1" },
    { "src": "/api/orders/(.+)", "dest": "/api/orders/[id].js?id=$1" },
    { "src": "/api/tickets/(.+)/messages", "dest": "/api/tickets/[id]/messages.js?id=$1" },
    { "src": "/api/tickets/(?!index)(.+)", "dest": "/api/tickets/[id].js?id=$1" },
    { "src": "/(.*)", "dest": "/$1" }
  ],
  "github": {
    "silent": true
  },
  "trailingSlash": false
}
