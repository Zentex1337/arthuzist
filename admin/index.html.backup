    <script>
    function debugLog(msg) {
        console.log('[DEBUG]', msg);
    }
    const API_BASE = '/api';
    let currentUser = null;
    let currentTicketId = null;
    let currentOrderId = null;
    let currentImage = null;
    let revenueChart = null;
    let ordersChart = null;
    let refreshInterval = null;

    // ==================== API HELPERS ====================

    async function apiRequest(endpoint, options = {}) {
        const url = `${API_BASE}${endpoint}`;
        const config = {
            credentials: 'include',
            headers: {
                'Content-Type': 'application/json',
                ...options.headers
            },
            ...options
        };

        const token = localStorage.getItem('arthuzist_token');
        if (token) {
            config.headers.Authorization = `Bearer ${token}`;
        }

        const response = await fetch(url, config);
        const data = await response.json();

        if (response.status === 401) {
            localStorage.removeItem('arthuzist_token');
            window.location.href = '../auth.html';
            return;
        }

        if (!response.ok) {
            throw new Error(data.error || 'Request failed');
        }

        return data;
    }

    function sanitize(str) {
        if (!str) return '';
        const map = { '&': '&amp;', '<': '&lt;', '>': '&gt;', '"': '&quot;', "'": '&#x27;', '/': '&#x2F;' };
        return String(str).replace(/[&<>"'/]/g, char => map[char]);
    }

    function showToast(message, type = 'success') {
        const toast = document.getElementById('toast');
        const icon = type === 'success'
            ? '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M22 11.08V12a10 10 0 1 1-5.93-9.14"/><path d="M22 4L12 14.01l-3-3"/></svg>'
            : '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><path d="M15 9l-6 6M9 9l6 6"/></svg>';

        toast.className = `toast ${type} show`;
        toast.querySelector('.toast-icon').innerHTML = icon;
        toast.querySelector('.toast-message').textContent = message;
        setTimeout(() => toast.classList.remove('show'), 4000);
    }

    function formatDate(dateStr) {
        return new Date(dateStr).toLocaleDateString('en-IN', {
            day: 'numeric',
            month: 'short',
            year: 'numeric'
        });
    }

    function formatCurrency(amount) {
        return '' + (amount || 0).toLocaleString('en-IN');
    }

    // ==================== INITIALIZATION ====================

    document.addEventListener('DOMContentLoaded', async () => {
        debugLog('Dashboard loading...');

        // Check if token exists
        const token = localStorage.getItem('arthuzist_token');
        debugLog('Token: ' + (token ? token.slice(0, 20) + '...' : 'NONE'));

        // Check auth
        try {
            debugLog('Checking auth...');
            const data = await apiRequest('/auth/me');
            debugLog('Auth OK: ' + (data.user?.name || 'unknown'));

            if (!data.user || data.user.role !== 'admin') {
                debugLog('Not admin! Redirecting...');
                window.location.href = '../auth.html';
                return;
            }
            currentUser = data.user;
            debugLog('Logged in as: ' + currentUser.name + ' (' + currentUser.role + ')');
            updateAdminProfile();
        } catch (e) {
            debugLog('Auth FAILED: ' + e.message);
            window.location.href = '../auth.html';
            return;
        }

        initTabs();
        initUpload();
        loadAll();

        // Auto-refresh every 30 seconds
        refreshInterval = setInterval(loadAll, 30000);

        debugLog('Dashboard ready!');
    });

    function updateAdminProfile() {
        if (!currentUser) return;
        const initials = currentUser.name.split(' ').map(n => n[0]).join('').toUpperCase().slice(0, 2);
        document.getElementById('adminAvatar').textContent = initials;
        document.getElementById('adminName').textContent = currentUser.name;
    }

    // ==================== TAB NAVIGATION ====================

    function initTabs() {
        document.querySelectorAll('.nav-item[data-tab]').forEach(item => {
            item.addEventListener('click', () => switchTab(item.dataset.tab));
        });
    }

    function switchTab(tabName) {
        document.querySelectorAll('.nav-item').forEach(n => n.classList.remove('active'));
        document.querySelectorAll('.tab-content').forEach(t => t.classList.remove('active'));

        const navItem = document.querySelector(`.nav-item[data-tab="${tabName}"]`);
        if (navItem) navItem.classList.add('active');

        const tabContent = document.getElementById(tabName + 'Tab');
        if (tabContent) tabContent.classList.add('active');

        // Load data when switching to analytics tab
        if (tabName === 'analytics') {
            loadCharts();
        }
    }

    // ==================== DATA LOADING ====================

    async function loadAll() {
        debugLog('Loading all data...');
        try {
            await Promise.all([
                loadStats().catch(e => debugLog('loadStats failed: ' + e.message)),
                loadOrders().catch(e => debugLog('loadOrders failed: ' + e.message)),
                loadTickets().catch(e => debugLog('loadTickets failed: ' + e.message)),
                loadUsers().catch(e => debugLog('loadUsers failed: ' + e.message)),
                loadGallery().catch(e => debugLog('loadGallery failed: ' + e.message)),
                loadLogs().catch(e => debugLog('loadLogs failed: ' + e.message))
            ]);
            debugLog('All data loaded!');
        } catch (e) {
            debugLog('Load failed: ' + e.message);
        }
    }

    async function loadStats() {
        try {
            debugLog('Loading stats...');
            const data = await apiRequest('/admin/stats');
            debugLog('Stats received!');
            const stats = data.stats || {};

            // Update stat cards
            const usersTotal = stats.users?.total || 0;
            const ordersTotal = stats.orders?.total || 0;
            const ticketsOpen = stats.tickets?.open || 0;
            const revenue = stats.orders?.revenue || 0;

            debugLog('Users: ' + usersTotal + ', Orders: ' + ordersTotal + ', Tickets: ' + ticketsOpen);

            document.getElementById('statUsers').textContent = usersTotal;
            document.getElementById('statOrders').textContent = ordersTotal;
            document.getElementById('statTickets').textContent = ticketsOpen;
            document.getElementById('statRevenue').textContent = formatCurrency(revenue);

            // Update badges
            const ticketBadge = document.getElementById('ticketBadge');
            const openTickets = stats.tickets?.open || 0;
            if (openTickets > 0) {
                ticketBadge.textContent = openTickets;
                ticketBadge.style.display = 'block';
            } else {
                ticketBadge.style.display = 'none';
            }

            // Update recent orders in dashboard
            const recentOrders = data.recentOrders || [];
            const recentOrdersEl = document.getElementById('recentOrders');
            if (recentOrdersEl) {
                recentOrdersEl.innerHTML = recentOrders.length > 0
                    ? recentOrders.slice(0, 5).map(o => `
                        <tr>
                            <td><strong>${sanitize(o.order_number || o.id?.slice(0,8))}</strong></td>
                            <td>${sanitize(o.name || 'N/A')}</td>
                            <td>${sanitize(o.service_name || o.service || 'N/A')}</td>
                            <td>${formatCurrency(o.total || 0)}</td>
                            <td><span class="status status-${o.status}">${o.status}</span></td>
                        </tr>
                    `).join('')
                    : '<tr><td colspan="5" class="empty-state">No orders yet</td></tr>';
            }

            // Update pending tickets
            const pendingTickets = data.pendingTickets || [];
            const pendingTicketsEl = document.getElementById('pendingTickets');
            if (pendingTicketsEl) {
                pendingTicketsEl.innerHTML = pendingTickets.length > 0
                    ? pendingTickets.slice(0, 5).map(t => `
                        <tr>
                            <td><strong style="color: var(--gold);">${sanitize(t.ticket_number)}</strong></td>
                            <td>${sanitize(t.subject)}</td>
                            <td><span class="status status-${t.status}">${t.status}</span></td>
                            <td>${formatDate(t.created_at)}</td>
                            <td><button class="btn btn-outline btn-sm" onclick="openTicketModal('${t.id}')">View</button></td>
                        </tr>
                    `).join('')
                    : '<tr><td colspan="5" class="empty-state">No pending tickets</td></tr>';
            }
        } catch (e) {
            debugLog('Stats ERROR: ' + e.message);
            showToast('Failed to load stats: ' + e.message, 'error');
        }
    }

    async function loadOrders() {
        try {
            const data = await apiRequest('/orders');
            const orders = data.orders || [];
            debugLog('Orders loaded: ' + orders.length);

            // Full orders table
            document.getElementById('ordersTable').innerHTML = orders.map(o => `
                <tr>
                    <td><strong>${sanitize(o.order_number || o.id)}</strong></td>
                    <td>${sanitize(o.name)}</td>
                    <td>${sanitize(o.email)}</td>
                    <td>${sanitize(o.service_name || o.service)}</td>
                    <td>${formatCurrency(o.total)}</td>
                    <td>${formatCurrency(o.advance)}</td>
                    <td>${formatDate(o.created_at)}</td>
                    <td><span class="status status-${o.status}">${o.status}</span></td>
                    <td class="table-actions">
                        <button class="btn btn-outline btn-sm" onclick="openOrderModal('${o.id}')">View</button>
                    </td>
                </tr>
            `).join('') || '<tr><td colspan="9" class="empty-state">No orders yet</td></tr>';
        } catch (e) {
            console.error('Failed to load orders:', e);
        }
    }

    let allTickets = [];

    async function loadTickets() {
        try {
            const data = await apiRequest('/tickets');
            allTickets = data.tickets || [];
            debugLog('Tickets: ' + allTickets.length);
            renderTicketsTable(allTickets);
        } catch (e) {
            debugLog('Tickets ERROR: ' + e.message);
        }
    }

    function renderTicketsTable(tickets) {
        document.getElementById('ticketsTable').innerHTML = tickets.map(t => `
            <tr>
                <td><strong style="color: var(--gold); font-family: monospace;">${sanitize(t.ticket_number || t.id.slice(0, 8))}</strong></td>
                <td>${sanitize(t.users?.name || t.author_name || t.user_name || 'Unknown')}</td>
                <td>${sanitize(t.subject)}</td>
                <td>${sanitize(t.category)}</td>
                <td>${formatDate(t.created_at)}</td>
                <td><span class="status status-${t.status}">${t.status}</span></td>
                <td class="table-actions">
                    <button class="btn btn-outline btn-sm" onclick="openTicketModal('${t.id}')">View</button>
                </td>
            </tr>
        `).join('') || '<tr><td colspan="7" class="empty-state">No tickets found</td></tr>';
    }

    function searchTicket() {
        const searchTerm = document.getElementById('ticketSearch').value.trim().toUpperCase();
        if (!searchTerm) {
            renderTicketsTable(allTickets);
            return;
        }
        const filtered = allTickets.filter(t =>
            (t.ticket_number && t.ticket_number.toUpperCase().includes(searchTerm)) ||
            t.id.toUpperCase().includes(searchTerm) ||
            (t.subject && t.subject.toUpperCase().includes(searchTerm))
        );
        renderTicketsTable(filtered);
        if (filtered.length === 0) {
            showToast('No tickets found matching: ' + searchTerm, 'error');
        }
    }

    function clearTicketSearch() {
        document.getElementById('ticketSearch').value = '';
        renderTicketsTable(allTickets);
    }

    async function loadUsers() {
        try {
            const data = await apiRequest('/admin/users');
            const users = data.users || [];
            debugLog('Users loaded: ' + users.length);

            document.getElementById('usersTable').innerHTML = users.map(u => `
                <tr>
                    <td><strong>${sanitize(u.id).slice(0, 8)}...</strong></td>
                    <td>${sanitize(u.name)}</td>
                    <td>${sanitize(u.email)}</td>
                    <td><span class="status ${u.role === 'admin' ? 'status-active' : ''}">${u.role || 'user'}</span></td>
                    <td>${formatDate(u.created_at)}</td>
                    <td><span class="status status-${u.banned ? 'banned' : 'active'}">${u.banned ? 'Banned' : 'Active'}</span></td>
                    <td class="table-actions">
                        ${u.role !== 'admin' ? (u.banned
                            ? `<button class="btn btn-success btn-sm" onclick="toggleBan('${u.id}', false)">Unban</button>`
                            : `<button class="btn btn-danger btn-sm" onclick="toggleBan('${u.id}', true)">Ban</button>`
                        ) : '<span style="color: var(--text-muted);">-</span>'}
                    </td>
                </tr>
            `).join('') || '<tr><td colspan="7" class="empty-state">No users yet</td></tr>';
        } catch (e) {
            console.error('Failed to load users:', e);
        }
    }

    async function loadGallery() {
        try {
            const data = await apiRequest('/gallery');
            const items = data.gallery || [];

            document.getElementById('adminGallery').innerHTML = items.map(i => `
                <div style="position: relative; aspect-ratio: 1; border-radius: 10px; overflow: hidden; background: var(--bg-secondary);">
                    <img src="${sanitize(i.image)}" alt="${sanitize(i.title)}" style="width: 100%; height: 100%; object-fit: cover;" onerror="this.src='https://via.placeholder.com/150?text=Error'">
                    <button onclick="deleteArtwork('${i.id}')" style="position: absolute; top: 0.5rem; right: 0.5rem; width: 28px; height: 28px; border-radius: 6px; background: var(--error); border: none; color: white; cursor: pointer; display: flex; align-items: center; justify-content: center;">
                        <svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" width="14" height="14"><path d="M18 6L6 18M6 6l12 12"/></svg>
                    </button>
                    <div style="position: absolute; bottom: 0; left: 0; right: 0; padding: 0.75rem; background: linear-gradient(transparent, rgba(0,0,0,0.8));">
                        <div style="font-size: 0.8rem; font-weight: 600;">${sanitize(i.title)}</div>
                        <div style="font-size: 0.65rem; color: var(--gold); text-transform: uppercase;">${sanitize(i.category)}</div>
                    </div>
                </div>
            `).join('') || '<div class="empty-state" style="grid-column: 1/-1;"><p>No artwork uploaded yet</p></div>';
        } catch (e) {
            console.error('Failed to load gallery:', e);
        }
    }

    async function loadLogs() {
        try {
            const data = await apiRequest('/admin/logs');
            const logs = data.logs || [];

            document.getElementById('logsContainer').innerHTML = logs.slice(0, 100).map(l => `
                <div class="log-entry">
                    <div class="log-icon ${getLogType(l.action)}">
                        ${getLogIcon(l.action)}
                    </div>
                    <div class="log-content">
                        <div class="log-action">${sanitize(l.action)}</div>
                        <div class="log-details">${sanitize(JSON.stringify(l.details || {}))}</div>
                    </div>
                    <div class="log-time">${formatDate(l.timestamp || l.created_at)}</div>
                </div>
            `).join('') || '<div class="empty-state"><p>No activity logs</p></div>';
        } catch (e) {
            console.error('Failed to load logs:', e);
        }
    }

    function getLogType(action) {
        if (action.includes('ERROR') || action.includes('FAIL') || action.includes('BAN')) return 'error';
        if (action.includes('LOGIN') || action.includes('SUCCESS') || action.includes('CREATED')) return 'success';
        if (action.includes('WARNING') || action.includes('ATTEMPT')) return 'warning';
        return 'info';
    }

    function getLogIcon(action) {
        if (action.includes('LOGIN')) return '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M15 3h4a2 2 0 0 1 2 2v14a2 2 0 0 1-2 2h-4"/><polyline points="10 17 15 12 10 7"/><line x1="15" y1="12" x2="3" y2="12"/></svg>';
        if (action.includes('ORDER')) return '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M6 2L3 6v14a2 2 0 0 0 2 2h14a2 2 0 0 0 2-2V6l-3-4z"/></svg>';
        if (action.includes('TICKET')) return '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><path d="M21 15a2 2 0 0 1-2 2H7l-4 4V5a2 2 0 0 1 2-2h14a2 2 0 0 1 2 2z"/></svg>';
        return '<svg viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2"><circle cx="12" cy="12" r="10"/><line x1="12" y1="16" x2="12" y2="12"/><line x1="12" y1="8" x2="12.01" y2="8"/></svg>';
    }

    // ==================== CHARTS ====================

    function loadCharts() {
        // Revenue Chart
        const revenueCtx = document.getElementById('revenueChart');
        if (revenueCtx) {
            if (revenueChart) revenueChart.destroy();

            revenueChart = new Chart(revenueCtx, {
                type: 'line',
                data: {
                    labels: ['Jan', 'Feb', 'Mar', 'Apr', 'May', 'Jun'],
                    datasets: [{
                        label: 'Revenue',
                        data: [12000, 19000, 15000, 25000, 22000, 30000],
                        borderColor: '#d4af37',
                        backgroundColor: 'rgba(212, 175, 55, 0.1)',
                        tension: 0.4,
                        fill: true
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: { display: false }
                    },
                    scales: {
                        y: {
                            beginAtZero: true,
                            grid: { color: 'rgba(255,255,255,0.05)' },
                            ticks: { color: '#5a5a65' }
                        },
                        x: {
                            grid: { display: false },
                            ticks: { color: '#5a5a65' }
                        }
                    }
                }
            });
        }

        // Orders Chart
        const ordersCtx = document.getElementById('ordersChart');
        if (ordersCtx) {
            if (ordersChart) ordersChart.destroy();

            ordersChart = new Chart(ordersCtx, {
                type: 'doughnut',
                data: {
                    labels: ['Completed', 'In Progress', 'Pending', 'Cancelled'],
                    datasets: [{
                        data: [45, 25, 20, 10],
                        backgroundColor: ['#22c55e', '#3b82f6', '#fbbf24', '#ef4444'],
                        borderWidth: 0
                    }]
                },
                options: {
                    responsive: true,
                    maintainAspectRatio: false,
                    plugins: {
                        legend: {
                            position: 'bottom',
                            labels: { color: '#9898a0', padding: 15 }
                        }
                    }
                }
            });
        }
    }

    // ==================== TICKET ACTIONS ====================

    async function openTicketModal(ticketId) {
        currentTicketId = ticketId;

        try {
            const data = await apiRequest(`/tickets/${ticketId}`);
            const ticket = data.ticket;

            document.getElementById('ticketModalSubject').textContent = ticket.subject;
            document.getElementById('ticketStatus').value = ticket.status;

            document.getElementById('ticketMessages').innerHTML = (ticket.ticket_messages || ticket.messages || []).map(m => `
                <div class="message ${m.is_admin ? 'admin' : 'user'}">
                    <div class="message-author">
                        ${sanitize(m.author_name || 'User')}
                        ${m.is_admin ? '<span class="admin-badge">Admin</span>' : ''}
                    </div>
                    <div class="message-text">${sanitize(m.message || m.content || m.text)}</div>
                    <div class="message-time">${formatDate(m.created_at || m.timestamp)}</div>
                </div>
            `).join('') || '<p style="text-align: center; color: var(--text-muted);">No messages</p>';

            document.getElementById('adminReply').value = '';
            document.getElementById('ticketModal').classList.add('active');
        } catch (e) {
            showToast('Failed to load ticket', 'error');
        }
    }

    async function sendAdminReply() {
        if (!currentTicketId) return;

        const reply = document.getElementById('adminReply').value.trim();
        const status = document.getElementById('ticketStatus').value;

        try {
            await apiRequest(`/tickets/${currentTicketId}/messages`, {
                method: 'POST',
                body: JSON.stringify({
                    message: reply,
                    status: status
                })
            });

            closeModal('ticketModal');
            loadTickets();
            loadStats();
            showToast('Reply sent successfully');
        } catch (e) {
            showToast('Failed to send reply', 'error');
        }
    }

    // ==================== ORDER ACTIONS ====================

    async function openOrderModal(orderId) {
        currentOrderId = orderId;

        try {
            const data = await apiRequest(`/orders/${orderId}`);
            const order = data.order;

            document.getElementById('orderModalTitle').textContent = `Order ${order.order_number || order.id}`;
            document.getElementById('orderStatus').value = order.status;

            document.getElementById('orderModalBody').innerHTML = `
                <div style="display: grid; gap: 1rem;">
                    <div class="user-card">
                        <div class="user-card-avatar">${(order.name || 'U')[0].toUpperCase()}</div>
                        <div class="user-card-info">
                            <h4>${sanitize(order.name)}</h4>
                            <p>${sanitize(order.email)}</p>
                        </div>
                    </div>
                    <div style="display: grid; grid-template-columns: 1fr 1fr; gap: 1rem;">
                        <div style="background: var(--bg-secondary); padding: 1rem; border-radius: 8px;">
                            <div style="font-size: 0.7rem; color: var(--text-muted); text-transform: uppercase; margin-bottom: 0.25rem;">Service</div>
                            <div>${sanitize(order.service_name || order.service)}</div>
                        </div>
                        <div style="background: var(--bg-secondary); padding: 1rem; border-radius: 8px;">
                            <div style="font-size: 0.7rem; color: var(--text-muted); text-transform: uppercase; margin-bottom: 0.25rem;">Size</div>
                            <div>${sanitize(order.size_name || order.size)}</div>
                        </div>
                        <div style="background: var(--bg-secondary); padding: 1rem; border-radius: 8px;">
                            <div style="font-size: 0.7rem; color: var(--text-muted); text-transform: uppercase; margin-bottom: 0.25rem;">Total</div>
                            <div style="color: var(--gold); font-weight: 700;">${formatCurrency(order.total)}</div>
                        </div>
                        <div style="background: var(--bg-secondary); padding: 1rem; border-radius: 8px;">
                            <div style="font-size: 0.7rem; color: var(--text-muted); text-transform: uppercase; margin-bottom: 0.25rem;">Advance Paid</div>
                            <div style="color: var(--success);">${formatCurrency(order.advance)}</div>
                        </div>
                    </div>
                    ${order.message ? `
                    <div style="background: var(--bg-secondary); padding: 1rem; border-radius: 8px;">
                        <div style="font-size: 0.7rem; color: var(--text-muted); text-transform: uppercase; margin-bottom: 0.5rem;">Customer Message</div>
                        <div style="color: var(--text-secondary);">${sanitize(order.message)}</div>
                    </div>
                    ` : ''}
                </div>
            `;

            document.getElementById('orderModal').classList.add('active');
        } catch (e) {
            showToast('Failed to load order', 'error');
        }
    }

    async function updateOrderStatus() {
        if (!currentOrderId) return;

        const status = document.getElementById('orderStatus').value;

        try {
            await apiRequest(`/orders/${currentOrderId}`, {
                method: 'PATCH',
                body: JSON.stringify({ status })
            });

            closeModal('orderModal');
            loadOrders();
            showToast('Order status updated');
        } catch (e) {
            showToast('Failed to update order', 'error');
        }
    }

    // ==================== USER ACTIONS ====================

    async function toggleBan(userId, ban) {
        if (!confirm(ban ? 'Ban this user?' : 'Unban this user?')) return;

        try {
            await apiRequest(`/admin/users/${userId}/ban`, {
                method: 'PATCH',
                body: JSON.stringify({ banned: ban })
            });

            loadUsers();
            showToast(ban ? 'User banned' : 'User unbanned');
        } catch (e) {
            showToast('Failed to update user', 'error');
        }
    }

    // ==================== GALLERY ACTIONS ====================

    function initUpload() {
        const zone = document.getElementById('uploadZone');
        const input = document.getElementById('fileInput');

        zone.onclick = () => input.click();
        zone.ondragover = (e) => { e.preventDefault(); zone.style.borderColor = 'var(--gold)'; };
        zone.ondragleave = () => { zone.style.borderColor = 'var(--border-dark)'; };
        zone.ondrop = (e) => {
            e.preventDefault();
            zone.style.borderColor = 'var(--border-dark)';
            handleFile(e.dataTransfer.files[0]);
        };

        input.onchange = () => handleFile(input.files[0]);
    }

    function handleFile(file) {
        if (!file || !file.type.startsWith('image/')) return;

        const reader = new FileReader();
        reader.onload = (e) => {
            currentImage = e.target.result;
            document.getElementById('previewImg').src = currentImage;
            document.getElementById('imagePreview').style.display = 'block';
        };
        reader.readAsDataURL(file);
    }

    function openUploadModal() {
        document.getElementById('uploadModal').classList.add('active');
        currentImage = null;
        document.getElementById('imagePreview').style.display = 'none';
        document.getElementById('artTitle').value = '';
        document.getElementById('artCategory').value = 'charcoal';
    }

    async function saveArtwork() {
        const title = document.getElementById('artTitle').value.trim();
        const category = document.getElementById('artCategory').value;

        if (!currentImage || !title) {
            showToast('Please fill all fields', 'error');
            return;
        }

        try {
            await apiRequest('/gallery', {
                method: 'POST',
                body: JSON.stringify({
                    image: currentImage,
                    title,
                    category
                })
            });

            closeModal('uploadModal');
            loadGallery();
            loadStats();
            showToast('Artwork uploaded successfully');
        } catch (e) {
            showToast('Failed to upload artwork', 'error');
        }
    }

    async function deleteArtwork(id) {
        if (!confirm('Delete this artwork?')) return;

        try {
            await apiRequest(`/gallery/${id}`, { method: 'DELETE' });
            loadGallery();
            loadStats();
            showToast('Artwork deleted');
        } catch (e) {
            showToast('Failed to delete artwork', 'error');
        }
    }

    // ==================== LOGS ====================

    async function exportLogs() {
        try {
            const data = await apiRequest('/admin/logs');
            const logs = data.logs || [];

            const text = logs.map(l =>
                `[${l.timestamp || l.created_at}] ${l.action} - ${JSON.stringify(l.details || {})}`
            ).join('\n');

            const blob = new Blob([text], { type: 'text/plain' });
            const a = document.createElement('a');
            a.href = URL.createObjectURL(blob);
            a.download = `arthuzist_logs_${new Date().toISOString().split('T')[0]}.txt`;
            a.click();

            showToast('Logs exported successfully');
        } catch (e) {
            showToast('Failed to export logs', 'error');
        }
    }

    // ==================== MODAL HELPERS ====================

    function closeModal(id) {
        document.getElementById(id).classList.remove('active');
    }

    // Close modals on escape key
    document.addEventListener('keydown', (e) => {
        if (e.key === 'Escape') {
            document.querySelectorAll('.modal.active').forEach(m => m.classList.remove('active'));
        }
    });

    // Close modal when clicking outside
    document.querySelectorAll('.modal').forEach(modal => {
        modal.addEventListener('click', (e) => {
            if (e.target === modal) modal.classList.remove('active');
        });
    });

    // Export functions to global scope for onclick handlers
    window.switchTab = switchTab;
    window.loadAll = loadAll;
    window.openUploadModal = openUploadModal;
    window.openTicketModal = openTicketModal;
    window.openOrderModal = openOrderModal;
    window.closeModal = closeModal;
    window.sendAdminReply = sendAdminReply;
    window.updateOrderStatus = updateOrderStatus;
    window.toggleBan = toggleBan;
    window.saveArtwork = saveArtwork;
    window.deleteArtwork = deleteArtwork;
    window.exportLogs = exportLogs;
    window.searchTicket = searchTicket;
    window.clearTicketSearch = clearTicketSearch;
    </script>
</body>
</html>
